<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="WypozyczalniaBundle\Entity\Car" table="Car">
    <indexes>
      <index name="category_id" columns="category_id"/>
    </indexes>
    <id name="carId" type="bigint" column="car_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="price" type="decimal" column="price" precision="4" scale="1" nullable="false"/>
    <field name="description" type="string" column="description" length="256" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="imgUrl" type="string" column="img_url" length="250" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="status" type="smallint" column="status" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-one field="category" target-entity="Category" fetch="LAZY">
      <join-columns>
        <join-column name="category_id" referenced-column-name="category_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>