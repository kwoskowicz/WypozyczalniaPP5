                            <div class="caption">
                                <h4 class="pull-right">{{ pop.price}}$</h4>
                                <h4><a href="{{ app.request.uriForPath('/car/') }}{{pop.car_id}}">{{ pop.title }}</a>
                                </h4>
                                <p>{{pop.description}}</p>
                            </div>
                            <div class="ratings">
                            </div>
                        </div>

                    </div>
                    {% if loop.index is divisibleby(3) %}
                        </div><div class="row">
                    {% endif %}
                  {% endfor %}
                  {% if category2 == "Most Ordered" %}
                  </div>
                  {% endif %}
                  </div>
				  {% if tag == "1" %}
